<div class="p-2 mt-3">
  <div class="text-bg-dark">
    <h1 class="text-center fw-bold display-5">News controller</h1>
    <div class="container">
      <div class="border-bottom"></div>
    </div>
  </div>
</div>

<div class="container-fluid mt-4">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th class="col">#</th>
                <th class="col">date</th>
                <th class="col">title</th>
                <th class="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% for( let i = 0; i < News.length; i++ ) { %>
              <form
                action="/news/delete/<%- News[i]._id %>?_method=DELETE"
                method="POST"
              >
                <tr>
                  <th scope="row"><%- i %></th>
                  <td>
                    <%- new Intl.DateTimeFormat("en-US").format(new
                    Date(News[i].date)) %>
                  </td>
                  <td><%- News[i].title %></td>
                  <td>
                    <button type="submit" class="btn btn-outline-danger">
                      D
                    </button>
                  </td>
                </tr>
              </form>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="col">
      <div class="card">
        <div class="card-body"></div>
      </div>
    </div>
  </div>
</div>
