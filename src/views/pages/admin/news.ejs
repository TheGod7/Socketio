<article class="p-2 mt-3">
  <header class="text-bg-dark">
    <h1 class="text-center fw-bold display-5">News controller</h1>
    <div class="container">
      <div class="border-bottom"></div>
    </div>
  </header>
</article>

<div class="container-fluid mt-4">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <div class="col">
      <article class="card">
        <header class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th class="col">#</th>
                <th class="col">date</th>
                <th class="col">title</th>
                <th class="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% for( let i=0; i < News.length; i++ ) { %>

                <form action="/news/delete/<%- News[i]._id %>?_method=DELETE" method="POST">
                  <tr>
                    <th scope="row"><%- (i+1) %></th>
                    <td>
                      <%- new Intl.DateTimeFormat("en-US").format(new Date(News[i].date)) %>
                    </td>
                    <td><%- News[i].title %></td>
                    <td>
                      <button type="submit" class="btn btn-outline-danger">
                        D
                      </button>
                    </td>
                  </tr>
                </form>
                <% } %>
            </tbody>
          </table>
          <footer class="mt-4">I think not more than 10 news is god</footer>
        </header>
      </article>
    </div>

    <div class="col">
      <article class="card">
        <header class="card-body">
          <h1 class="card-title text-center mb-3">Create a new News</h1>

          <form action="/news/add" method="POST" class="row g-3 needs-validation" novalidate>
            <div class="mb-2">
              <label for="email" class="form-label">Title:</label>
              <input type="text" name="title" id="title" class="form-control" placeholder="Title of News" required />
              <div class="invalid-feedback">Please put a Title</div>
            </div>

            <div class="mb-2">
              <label for="description" class="form-label">description:</label>
              <textarea name="content" id="description" class="form-control" placeholder="description"
                required></textarea>
              <div class="invalid-feedback">Please enter a description</div>
            </div>

            <div class="d-grid gap-2">
              <button class="mt-4 btn btn-outline-success" type="submit">
                Submit
              </button>
            </div>
          </form>

          <% if(error) {%>
            <footer class="text-danger mt-2"><%- error._message %></footer>

            <% } %>
              <% if (done) { %>
                <footer class="text-success mt-2"><%- done %></footer>
                <% } %>
        </header>
      </article>
    </div>
  </div>
</div>